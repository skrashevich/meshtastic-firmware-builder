# Backend
APP_PORT=8080
APP_WORKDIR=./build-workdir
APP_CONCURRENT_BUILDS=1
APP_RETENTION_HOURS=168
APP_BUILD_TIMEOUT_MINUTES=90
APP_BUILDER_IMAGE=meshtastic-pio-builder:latest
APP_PLATFORMIO_JOBS=1
# Optional local cache path (defaults to ./build-workdir/platformio-cache)
APP_PLATFORMIO_CACHE_DIR=./build-workdir/platformio-cache
APP_ALLOWED_ORIGINS=http://localhost:5173
APP_MAX_LOG_LINES=20000
APP_BUILD_RATE_LIMIT_PER_MINUTE=10
# Set to 0/false for trusted self-hosted setups
APP_REQUIRE_CAPTCHA=1
# Optional: explicit base URL of this backend node
APP_NODE_BASE_URL=http://localhost:8080
# Optional: allowed peer backends for proxying cluster requests
# Example: APP_PROXY_BACKEND_URLS=http://backend-1:8080,http://backend-2:8080
APP_PROXY_BACKEND_URLS=
# Timeout for backend-to-backend proxy requests
APP_PROXY_TIMEOUT_SECONDS=10
# Optional for Dockerized backend + docker.sock setup.
# If unset, docker-compose uses ${PWD}/build-workdir defaults.
APP_DOCKER_HOST_WORKDIR=/absolute/path/to/meshtastic-firmware-builder/build-workdir
APP_DOCKER_HOST_CACHE_DIR=/absolute/path/to/meshtastic-firmware-builder/build-workdir/platformio-cache

# Frontend (Vite)
# Primary backend URL (fallback when VITE_API_BASE_URLS is empty)
VITE_API_BASE_URL=http://localhost:8080
# Optional backend pool for round-robin + failover (comma/space/newline separated)
# Example: VITE_API_BASE_URLS=http://localhost:8080,http://localhost:8081
VITE_API_BASE_URLS=
